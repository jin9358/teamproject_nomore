<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.nomoreback.domain.forum.ForumLikeMapper">

    <insert id="insertLike">
        insert into forum_like_tb (forum_id, user_id)
        values (#{forumId}, #{userId})
    </insert>

    <delete id="deleteLike">
        delete from forum_like_tb
        where forum_id = #{forumId}
        and user_id = #{userId}
    </delete>
    <delete id="deleteByUserId">
        delete from forum_like_tb
        where user_id = #{userId}
    </delete>

    <delete id="deleteByUserIdAndMoimId">
        delete fl
        from forum_like_tb fl
        join forum_tb f on fl.forum_id = f.forum_id
        where fl.user_id = #{userId}
        and f.moim_id = #{moimId}
    </delete>

    <select id="getLikeCount" resultType="java.lang.Integer">
        select count(*)
        from forum_like_tb
        where forum_id = #{forumId}
    </select>

</mapper>
